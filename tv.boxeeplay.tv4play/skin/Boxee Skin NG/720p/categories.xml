<?xml version="1.0" encoding="utf-8" ?>
<window type="window" id="14002">
	<onload lang="python">
<![CDATA[
import tv4mc
import mc

list = mc.GetActiveWindow().GetList(120)
if len(list.GetItems()) == 0:
    mc.GetActiveWindow().GetList(120).SetItems(tv4mc.GetCategories())

]]>
	</onload>
    <defaultcontrol always="true">120</defaultcontrol>
    <controls>
        <include>Common_Background</include>
        <include>Common_Status</include>
        <control type="label" id="122">
			<visible>Window.IsVisible(DialogProgress.xml)</visible>
            <posx>32</posx>
            <posy>32</posy>
            <width>320</width>
            <height>48</height>
            <textcolor>grey</textcolor>
            <label>Laddar in kategorier</label>
        </control>

	<control type="panel" id="120">
            <content type="action">
				<onclick lang="python">
<![CDATA[

list = mc.GetActiveWindow().GetList(120)
index = list.GetFocusedItem()
item = list.GetItem(index)
mc.LogInfo("tv4xml: selected item")
item.Dump()

app = mc.GetApp()
params = mc.Parameters()
params['id'] = tv4mc.GetCategoryId(item)
app.ActivateWindow(14000, params)
]]>
				</onclick>
			</content>
			<visible>true</visible>
			<posx>10</posx>
			<posy>10</posy>
			<width>1200</width>
			<height>700</height>
            <pagecontrol></pagecontrol>
            <scrolltime>100</scrolltime>
            <preloaditems>4</preloaditems>
            <orientation>vertical</orientation>
	<orientation>horizontal</orientation>
	<itemlayout width="314" height="220">
                <control type="image">
                    <posx>16</posx>
                    <posy>5</posy>
                    <width>282</width>
                    <height>186</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <aspectratio align="left">keep</aspectratio>
                    <info>ListItem.Thumb</info>
                </control>
		<control type="label">
					<posx>16</posx>
					<posy>171</posy>
					<width>282</width>
					<height>30</height>
					<align>left</align>
					<aligny>top</aligny>
					<textcolor>grey</textcolor>
					<label>$INFO[ListItem.Label]</label>
		</control>
	</itemlayout>
	<focusedlayout width="314" height="220">
		<control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>314</width>
                    <height>220</height>
			<texture>focused-item.png</texture>
		</control>
                <control type="image">
                    <posx>16</posx>
                    <posy>5</posy>
                    <width>282</width>
                    <height>186</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <aspectratio align="left">keep</aspectratio>
                    <info>ListItem.Thumb</info>
                </control>
				<control type="label">
					<posx>16</posx>
					<posy>171</posy>
					<width>282</width>
					<height>30</height>
					<align>left</align>
					<aligny>top</aligny>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
    </controls>
</window>

